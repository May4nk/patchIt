{
  "name": "server",
  "version": "1.0.0",
  "description": "PatchIt: patch things here.",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=dev npx nodemon",
    "build": "rimraf ./lib && tsc",
    "start": "npm run build && NODE_ENV=prod node ./lib/server.js",
    "watch": "tsc -w",
    "migrate:make": "NODE_OPTIONS='--loader ts-node/esm' npx knex migrate:make $1 --knexfile ./src/knexfile",
    "migrate:latest": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=prod npx knex migrate:latest --knexfile ./src/knexfile",
    "seed:make": "NODE_OPTIONS='--loader ts-node/esm' npx knex seed:make $1 --knexfile ./src/knexfile",
    "seed:run": "NODE_OPTIONS='--loader ts-node/esm' NODE_ENV=prod npx knex seed:run --knexfile ./src/knexfile",
    "start:prod": "npm run migrate:latest && npm run seed:run && npm run start"
  },
  "author": "mayank",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/merge": "^9.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@graphql-tools/schema": "^10.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.7",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
